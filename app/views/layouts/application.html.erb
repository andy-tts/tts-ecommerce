<!DOCTYPE html>
<html>
  <head>
    <title>TTS E-Commerce</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="container">
      <% if user_signed_in? %>
        <nav class="navbar ">
           <div class="collapse navbar-collapse">
             
               <div class="navbar-nav pull-right">
                 <span class="nav-item"><%= current_user.email %></span>
                 <%= link_to "Edit Profile", edit_user_registration_path, class: 'nav-item nav-link' %>
                 <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: ' nav-item nav-link' %>
               </div>
             
           </div>
        </nav>
        <div class = "row">
          <div class="col-sm-6 col-md-6">
            <h4>Categories</h4>
            <ul>
              <% @categories.each do |category| %>
                <li><%= link_to category.name, items_by_category_path(category_id: category.id) %></li>
              <% end %>   
            </ul>
          </div>
          <div class="col-sm-6 col-md-6">
            <h4>Brands</h4>
            <ul>
              <% @brands.each do |brand| %>
                <li><%= link_to brand, items_by_brand_path(brand: brand) %></li>
              <% end %>   
            </ul>
          </div>
        </div>
      <% end %>
    	<%= yield %>
	</div>
  </body>
</html>